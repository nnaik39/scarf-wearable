<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.magulo.scarf_wearable.TempSetter"
    android:background="#ffffb7e7"
    android:id="@+id/relayout">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is the temperature number right?"
        android:id="@+id/checkBox"
        android:layout_above="@+id/next"
        android:layout_alignEnd="@+id/input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:selectAllOnFocus="false"
        android:text="Your temperature is"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next"
        android:layout_alignParentBottom="true"
        android:translationZ="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempView"
        android:src="@drawable/redrect"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!--   <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/imageView"
           android:src="@drawable/emptytherm"
           android:layout_alignTop="@+id/tempView"
           android:layout_centerHorizontal="true" />
   -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:minHeight="100dp"
        android:minWidth="200dp"
        android:background="#ffffb7e7"
        android:layout_above="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_view"
        android:textIsSelectable="false"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/imageView2"
        android:text="new text"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/messages"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

</RelativeLayout>
